extends layout


block content
  .container

    include dj-sidebar

    form.profile-form.line-form(action='/app/profile', method='post', enctype="multipart/form-data")
      .row
        .col-md-6
          h3.caps The Basics
          input.input-block-level(type='text', name='name', placeholder='Name', value="#{user.local.name}")
          br
          input.input-block-level(type='text', name='showName', placeholder='Show Name')
        .col-md-6
          h3.caps A profile picture
          input(type='file', name='picture', accept="image/*")
      .row
        .col-md-6
          h3.caps A short bio
          textarea.input-block-level(rows='9', name='bio')
        .col-md-6
          h3.caps Favorite bands
          input.input-block-level.band(type='text', placeholder='1.', name='band1')
          input.input-block-level.band(type='text', placeholder='2.', name='band2')
          input.input-block-level.band(type='text', placeholder='3.', name='band3')
          input.input-block-level.band(type='text', placeholder='4.', name='band4')
          input.input-block-level.band(type='text', placeholder='5.', name='band5')
      .row
        button.btn(type='submit') Save
    //end container
    script(type='text/javascript').                                   
      var local_data =!{JSON.stringify(user)}
    include global-js
    script(src='/javascripts/profile.js')
