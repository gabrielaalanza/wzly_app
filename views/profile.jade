extends layout


block content
  .container

    include dj-sidebar

    form.profile-form.line-form(action='/app/profile', method='post', enctype="multipart/form-data")
      .row
        .col-md-6
          h3 The Basics
          input.input-block-level(type='text', name='name', placeholder='Name', value="#{user.local.name}")
          br
          input.input-block-level(type='text', name='showName', placeholder='Show Name', value="#{user.showName}")
        .col-md-6
          h3 A profile picture
          input(type='file', name='picture', accept="image/*")
      .row
        .col-md-6
          h3 A short bio
          textarea.input-block-level(rows='9', name='bio') #{user.bio}
        .col-md-6
          h3 Favorite bands
            input.input-block-level.band(type='text', placeholder='1.', name='band1', value="#{user.bands.band1}")
            input.input-block-level.band(type='text', placeholder='2.', name='band2', value="#{user.bands.band2}")
            input.input-block-level.band(type='text', placeholder='3.', name='band3', value="#{user.bands.band3}")
            input.input-block-level.band(type='text', placeholder='4.', name='band4', value="#{user.bands.band4}")
            input.input-block-level.band(type='text', placeholder='5.', name='band5', value="#{user.bands.band5}")
      button.btn(type='submit') Save
    //end container
    script(type='text/javascript').                                   
      var local_data =!{JSON.stringify(user)}
      console.log(local_data)
    script(src='//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')

